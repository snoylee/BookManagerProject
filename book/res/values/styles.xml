<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- android:layout_width="match_parent" -->
    
    <style name="divide_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/gray_divide_line</item>
    </style>
    <style name="divide_line_small" parent="@style/divide_line">
        <item name="android:layout_width">@dimen/width_60_80</item>
    </style>
    
    <style name="fragment_center_divide_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/fragment_usercenter_divide_line</item>
    </style>
    <style name="fragment_center_height_divide_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/fragment_usercenter_divide_line</item>
    </style>
    <style name="fragment_center_change_right_chick_tex_down_divide">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.5dip</item>
        <item name="android:background">@color/fragment_center_change_right_chick_tex_down_divide</item>
    </style>

</resources>
