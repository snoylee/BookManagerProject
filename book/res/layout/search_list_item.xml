<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/width_2_80"
    android:paddingRight="@dimen/width_2_80" >

    <TextView
        android:id="@+id/search_list_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_3_80"
        android:layout_marginRight="@dimen/width_3_80"
        android:paddingBottom="@dimen/height_1_80"
        android:paddingTop="@dimen/height_1_80"
        android:textColor="@color/textColor_2"
        android:textSize="@dimen/text_size_15" />

    <View
        style="@style/divide_line"
        android:layout_marginLeft="@dimen/width_3_80"
        android:layout_marginRight="@dimen/width_3_80"
        android:layout_alignParentBottom="true" />

</RelativeLayout>