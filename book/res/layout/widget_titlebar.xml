<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_8_80"
    android:background="@color/main_color"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/titlebar_lefticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/height_1_80"
        android:src="@drawable/title_bar_back_icon_normal"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/titlebar_action"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/width_2_80"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_18"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/titlebar_righticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:padding="@dimen/height_1_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:clickable="true"
        android:src="@drawable/search" />

    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/titlebar_action"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="35dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_22" />

</RelativeLayout>