<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <View
        android:id="@+id/mainlist_item_topline"
        style="@style/divide_line"
        android:layout_height="3dip"
        android:layout_marginBottom="@dimen/height_2_80"
        android:layout_marginTop="@dimen/height_1_80"
        android:background="@color/main_color" />

    <View
        android:id="@+id/mainlist_item_icon"
        android:layout_width="4dip"
        android:layout_height="@dimen/height_3_80"
        android:layout_below="@+id/mainlist_item_topline"
        android:layout_alignBottom="@+id/mainlist_item_title"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginTop="2dip"
        android:background="@color/main_color" />

    <TextView
        android:id="@+id/mainlist_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlist_item_topline"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_toRightOf="@+id/mainlist_item_icon"
        android:text="教辅教材"
        android:textColor="@color/textColor_2"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/mainlist_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mainlist_item_topline"
        android:layout_marginRight="@dimen/width_2_80"
        android:background="@drawable/shape_showmore_bg"
        android:paddingBottom="@dimen/height_0_80"
        android:paddingLeft="@dimen/width_2_80"
        android:paddingRight="@dimen/width_2_80"
        android:paddingTop="@dimen/height_0_80"
        android:text="更多"
        android:drawableRight="@drawable/arrow"
        android:textColor="#8e8e8e"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainlist_item_more"
        android:layout_marginTop="@dimen/height_1_80"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/width_2_80"
        android:paddingRight="@dimen/width_2_80" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.duowan.mobile.netroid.image.NetworkImageView
                android:id="@+id/book_image_1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_10_80"
                android:background="@drawable/book_default_cover" />

            <TextView
                android:id="@+id/book_name_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book_image_1"
                android:background="#88000000"
                android:padding="@dimen/height_0_80"
                android:textColor="@color/white_color"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="绿山墙的安妮" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_2_80"
            android:layout_marginRight="@dimen/width_2_80"
            android:layout_weight="1" >

            <com.duowan.mobile.netroid.image.NetworkImageView
                android:id="@+id/book_image_2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_10_80"
                android:background="@drawable/book_default_cover" />

            <TextView
                android:id="@+id/book_name_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book_image_2"
                android:background="#88000000"
                android:padding="@dimen/height_0_80"
                android:textColor="@color/white_color"
                android:gravity="center_horizontal"
                android:singleLine="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <com.duowan.mobile.netroid.image.NetworkImageView
                android:id="@+id/book_image_3"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_10_80"
                android:background="@drawable/book_default_cover" />

            <TextView
                android:id="@+id/book_name_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/book_image_3"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:background="#88000000"
                android:padding="@dimen/height_0_80"
                android:textColor="@color/white_color"
                android:text="绿山墙的安妮" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/divide_line"
        android:layout_marginTop="@dimen/height_1_80"
        android:layout_alignParentBottom="true" />

</RelativeLayout>