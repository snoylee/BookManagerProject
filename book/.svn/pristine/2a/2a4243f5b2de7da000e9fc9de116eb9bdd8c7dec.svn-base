<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.dbs.book.ui.view.titlebar.TitleBar
        style="@style/titlebarstyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
  
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginBottom="@dimen/height_2_80">
        <com.duowan.mobile.netroid.image.NetworkImageView
            android:id="@+id/book_detail_Image"
            android:layout_width="@dimen/width_25_80"
            android:layout_height="@dimen/height_18_80"
            android:layout_marginTop="@dimen/height_1_80"
            android:src="@drawable/book_face"/>
        <LinearLayout 
            android:layout_toRightOf="@id/book_detail_Image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_18_80"
            android:layout_marginLeft="@dimen/width_2_80"
            android:layout_marginTop="@dimen/height_1_80"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/book_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="路上墙的安妮"
                android:textColor="@color/book_iamge_back"
                android:textSize="22sp"
                />
            <TextView 
                android:id="@+id/book_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_1_80"
                android:text="分类:"
                android:textSize="22sp"
                android:textColor="@color/book_detail_type_text_back"/>
            <TextView 
                android:id="@+id/book_detail_readed_person_count"
                android:layout_marginTop="@dimen/height_1_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有25人阅读"
                android:textSize="22sp"
                android:textColor="@color/book_detail_type_text_back"
                />
        </LinearLayout>
    </RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<TextView 
	    android:id="@+id/book_detail_summary"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/width_5_80"
	    android:textSize="22sp"
	    android:textColor="@color/back_detail_fummy_back"
	    android:text="一段未成的难忘之旅，让邹苑受尽屈辱，让饱受沧桑，绝望逃离，从此紧闭心扉，不在渴望爱情渐渐动摇了他禁锢的心扉。"
	    />
	<View
        style="@style/divide_line"
      />
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_3_80"
	    android:background="@color/book_detail_text_pace_back"
	    />
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_5_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_mulu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="目录"
	        android:textSize="22sp"
	        android:textColor="@color/mulu_back_color"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="共168章"
	        android:textSize="20sp"
	        android:textColor="@color/all_zhang_back_color"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_6_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第1章"
	        android:textColor="@color/back_detail_fummy_back"
	        android:textSize="22sp"
	        />
	</RelativeLayout>
	<View
       style="@style/divide_line"
       android:layout_marginLeft="@dimen/width_3_80"
       android:layout_marginRight="@dimen/width_3_80"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_6_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第2章"
	        android:textColor="@color/back_detail_fummy_back"
	        android:textSize="22sp"
	        />
	   
	</RelativeLayout>
	<View
       style="@style/divide_line"
       android:layout_marginLeft="@dimen/width_3_80"
       android:layout_marginRight="@dimen/width_3_80"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_6_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第3章"
	        android:textColor="@color/back_detail_fummy_back"
	        android:textSize="22sp"
	        />
	  
	</RelativeLayout>
	<View
       style="@style/divide_line"
       android:layout_marginLeft="@dimen/width_3_80"
       android:layout_marginRight="@dimen/width_3_80"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_6_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第4章"
	        android:textColor="@color/back_detail_fummy_back"
	        android:textSize="22sp"
	        />
	   
	</RelativeLayout>
	<View
       style="@style/divide_line"
       android:layout_marginLeft="@dimen/width_3_80"
       android:layout_marginRight="@dimen/width_3_80"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_6_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="第5章"
	        android:textColor="@color/back_detail_fummy_back"
	        android:textSize="22sp"
	        />
	</RelativeLayout>
	<View
       style="@style/divide_line"
       android:layout_marginLeft="@dimen/width_3_80"
       android:layout_marginRight="@dimen/width_3_80"
      />
	<TextView 
	    android:id="@+id/book_mulu_look_all"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:text="查看全部"
	    android:textSize="22sp"
	    android:textColor="@color/look_all_back"
	    android:gravity="center"
	    />
	<View
        style="@style/divide_line"
      />
	<TextView 
	    android:layout_height="@dimen/height_3_80"
	    android:layout_width="match_parent"
	    android:background="@color/book_detail_text_pace_back"
	    />
	<View
        style="@style/divide_line"
      />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_7_80"
	    android:orientation="horizontal"
	    android:layout_marginTop="@dimen/height_2_80"
	    android:layout_marginBottom="@dimen/height_0_80"
	    >
	    <TextView 
	    android:layout_marginLeft="@dimen/width_3_80"
	    android:layout_marginRight="@dimen/width_3_80"
	    android:id="@+id/book_detail_start_read"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:layout_width="0dp"
	    android:text="开始阅读"
	    android:textSize="22sp"
	    android:textColor="@color/green_color"
	    android:gravity="center"
	    android:background="@drawable/selector_bookdetail_option"
	    />
	    <TextView 
	    android:id="@+id/book_detail_download"
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="@dimen/width_2_80"
	    android:layout_marginRight="@dimen/width_2_80"
	    android:layout_width="0dp"
	    android:gravity="center"
	    android:textSize="22sp"
	    android:textColor="@color/green_color"
	    android:background="@drawable/selector_bookdetail_option"
	    android:text="下载"
	    />
	    <TextView
	    android:id="@+id/book_detail_add_shujia" 
	    android:layout_weight="1"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="@dimen/width_2_80"
	    android:layout_marginRight="@dimen/width_2_80"
	    android:layout_width="0dp"
	    android:gravity="center"
	    android:textSize="22sp"
	    android:textColor="@color/green_color"
	    android:background="@drawable/selector_bookdetail_option"
	    android:text="加入书架"
	    />
	</LinearLayout>
</LinearLayout>

</ScrollView>
