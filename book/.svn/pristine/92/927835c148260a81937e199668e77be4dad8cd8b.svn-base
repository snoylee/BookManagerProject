<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_4_80"
        android:layout_marginBottom="@dimen/height_1_80">
        <ImageView 
            android:id="@+id/book_Image"
            android:layout_width="@dimen/width_25_80"
            android:layout_height="@dimen/height_18_80"
            android:layout_marginTop="@dimen/height_1_80"
            android:src="@drawable/book_face"/>
        <LinearLayout 
            android:layout_toRightOf="@id/book_Image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_18_80"
            android:layout_marginLeft="@dimen/width_2_80"
            android:layout_marginTop="@dimen/height_1_80"
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="路上墙的安妮"
                android:textSize="24sp"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                 >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类:"
                android:textSize="20sp"/>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文学  散文 随笔"
                android:textSize="20sp"/>
                </LinearLayout>
            <TextView 
                android:layout_marginTop="@dimen/height_2_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有25人阅读"
                android:textSize="20sp"
                />
        </LinearLayout>
    </RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/width_5_80"
	    android:text="一段未成的难忘之旅，让邹苑受尽屈辱，让饱受沧桑，绝望逃离，从此紧闭心扉，不在渴望爱情渐渐动摇了他禁锢的心扉。"
	    />
	<View
        style="@style/divide_line"
      />
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_5_80"
	    />
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_mulu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/height_3_80"
	        android:gravity="center"
	        android:text="目录"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="@dimen/height_3_80"
	        android:gravity="center"
	        android:text="共168章"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="第1章"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_toRightOf="@id/book_detail_zhang_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/width_2_80"
	        android:text="交易"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="第2章"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_toRightOf="@id/book_detail_zhang_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/width_2_80"
	        android:text="雨夜拜访"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="第3章"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_toRightOf="@id/book_detail_zhang_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/width_2_80"
	        android:text="回忆血腥屠杀"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="第4章"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_toRightOf="@id/book_detail_zhang_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/width_2_80"
	        android:text="货仓里的偷渡客1"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:layout_marginLeft="@dimen/width_4_80"
	    android:layout_marginRight="@dimen/width_4_80"
	    >
	    <TextView 
	        android:id="@+id/book_detail_zhang_5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="第5章"
	        android:textSize="22sp"
	        />
	    <TextView 
	        android:id="@+id/book_detail_all_count"
	        android:layout_toRightOf="@id/book_detail_zhang_5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="@dimen/width_2_80"
	        android:text="货舱里的偷渡客2"
	        android:textSize="18sp"
	        />
	</RelativeLayout>
	<View
        style="@style/divide_line"
      />
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_8_80"
	    android:text="查看全部"
	    android:textSize="24sp"
	    android:gravity="center"
	    />
	
</LinearLayout>
